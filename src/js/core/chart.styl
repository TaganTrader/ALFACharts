.ac_workarea
    width 100%
    height 100%
    padding 0
    margin 0
    display inline-block    
    font-family "Exo 2"
    
    div.ac_chart 
        width: 100%
        position relative
        cursor crosshair

        canvas 
            position absolute
            left 0
            top 0
            

    .ac_chart_cur_grabbing
        cursor grabbing !important

    .ac_chart_cur_n-resize
        cursor n-resize !important